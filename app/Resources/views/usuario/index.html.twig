{% extends 'base.html.twig' %}

{% block body %}
    <h1>Usuarios</h1>

    <table border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido Paterno</th>
                <th>Apellido Materno</th>
                <th>Edad</th>
                <th>Direccion</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td><a href="{{ path('usuario_show', { 'id': usuario.id }) }}">{{ usuario.id }}</a></td>
                <td>{{ usuario.nombre }}</td>
                <td>{{ usuario.apePaterno }}</td>
                <td>{{ usuario.apeMaterno }}</td>
                <td>{{ usuario.edad }}</td>
                <td>{{ usuario.direccion.calle~", "~usuario.direccion.colonia~", "~usuario.direccion.delegacion~" "~usuario.direccion.numero }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('usuario_show', { 'id': usuario.id }) }}">Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('usuario_edit', { 'id': usuario.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('usuario_new') }}">Crear nuevo usuario</a>
        </li>
        <li>
            <a href="{{ path('direccion_new') }}">Crear nueva direcci√≥n</a>
        </li>
    </ul>
{% endblock %}
