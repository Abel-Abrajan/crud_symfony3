{% extends 'base.html.twig' %}

{% block body %}
    <h1>Direcciones</h1>

    <table border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Calle</th>
                <th>Colonia</th>
                <th>Delegación</th>
                <th>Número</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for direccion in direccions %}
            <tr>
                <td><a href="{{ path('direccion_show', { 'id': direccion.id }) }}">{{ direccion.id }}</a></td>
                <td>{{ direccion.calle }}</td>
                <td>{{ direccion.colonia }}</td>
                <td>{{ direccion.delegacion }}</td>
                <td>{{ direccion.numero }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('direccion_show', { 'id': direccion.id }) }}">Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('direccion_edit', { 'id': direccion.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('direccion_new') }}">Nueva dirección</a>
        </li>
        <li>
            <a href="{{ path('usuario_index') }}">Ver usuarios</a>
        </li>
    </ul>
{% endblock %}
